#############################################################################
apiVersion: v1
kind: PersistentVolume
metadata:
  name: "asb-pv"
spec:
  capacity:
    storage: "1G"
  accessModes:
    - ReadWriteOnce
  nfs:
    path: "/srv/nfs/osev3-etcd/etcd-vol2"
    server: "central.cavenet.ca"
  persistentVolumeReclaimPolicy: Retain
  claimRef:
    name: "etcd"
    namespace: "openshift-ansible-service-broker"
