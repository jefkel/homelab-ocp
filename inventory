# Set variables common for all OSEv3 hosts
[OSEv3:vars]
# SSH user, this user should allow ssh based auth without requiring a password
ansible_ssh_user=jkelly
# If ansible_ssh_user is not root, ansible_become must be set to true
ansible_become=true

openshift_deployment_type=origin
openshift_master_default_subdomain=app.cavenet.ca
# used to ensure external DNS doesn't override internal name
MasterPublicURL=https://mm01.cavenet.ca:8443

# The following seems to mess up Ansible Service Broker, so ensure DNS is properly set to only internal address
# BEFORE running deploy
#openshift_dns_ip=10.1.1.10

os_firewall_use_firewalld=true

# uncomment the following to enable htpasswd authentication; defaults to DenyAllPasswordIdentityProvider
openshift_master_identity_providers=[{'name': 'htpasswd_auth', 'login': 'true', 'challenge': 'true', 'kind': 'HTPasswdPasswordIdentityProvider', 'filename': '/etc/origin/master/htpasswd'}]
openshift_master_htpasswd_file=/home/jkelly/htpasswd

openshift_docker_options="--log-driver json-file --log-opt max-size=1M --log-opt max-file=3"
openshift_check_min_host_memory_gb=1.5
openshift_check_min_host_disk_gb=15

#openshift_master_audit_config={"enabled": true, "auditFilePath": "/var/log/audit-ocp.log", "maximumFileRetentionDays": 7, "maximumFileSizeMegabytes": 50, "maximumRetainedFiles": 5, "logFormat": "legacy", "policyFile": "/etc/origin/master/audit-policy.yaml"}
## Referencing pre-dropped audit policy as nothing will copy the audit policy file during deploy-cluster
openshift_master_audit_config={"enabled": true, "auditFilePath": "/var/log/audit-ocp.log", "maximumFileRetentionDays": 7, "maximumFileSizeMegabytes": 50, "maximumRetainedFiles": 5, "logFormat": "legacy", "policyFile": "/usr/local/etc/test-audit-policy.yaml"}

