# Create an OSEv3 group that contains the masters, nodes, and etcd groups
[OSEv3:children]
masters
nodes
etcd
#nfs

[bastion]
bastion.cavenet.ca

# Set variables common for all OSEv3 hosts
[OSEv3:vars]
# SSH user, this user should allow ssh based auth without requiring a password
ansible_ssh_user=jkelly
# If ansible_ssh_user is not root, ansible_become must be set to true
ansible_become=true

openshift_deployment_type=origin
openshift_master_default_subdomain=app.cavenet.ca
# used to ensure external DNS doesn't override internal name
MasterPublicURL=https://mm01.cavenet.ca:8443

openshift_rolling_restart_mode=system
os_firewall_use_firewalld=true

# uncomment the following to enable htpasswd authentication; defaults to DenyAllPasswordIdentityProvider
openshift_master_identity_providers=[{'name': 'htpasswd_auth', 'login': 'true', 'challenge': 'true', 'kind': 'HTPasswdPasswordIdentityProvider'}]
openshift_master_htpasswd_file=/home/jkelly/htpasswd

openshift_docker_options="--log-driver json-file --log-opt max-size=1M --log-opt max-file=3"
openshift_check_min_host_memory_gb=1.5
openshift_check_min_host_disk_gb=15

# PersistentLocalStorage
# If Persistent Local Storage is wanted, this boolean can be defined to True.
# This will create all necessary configuration to use persistent storage on nodes.
#openshift_persistentlocalstorage_enabled=False
openshift_persistentlocalstorage_enabled=True

# Override image as per https://github.com/openshift/openshift-ansible/issues/9960
ansible_service_broker_image="docker.io/ansibleplaybookbundle/origin-ansible-service-broker:ansible-service-broker-1.2.17-1"
ansible_service_broker_local_registry_whitelist=['.*-apb$']

# host group for masters
[masters]
mm01.cavenet.ca

# host group for etcd
[etcd]
mm01.cavenet.ca

# host group for nodes, includes region info
[nodes]
mm01.cavenet.ca openshift_node_group_name='node-config-master'
mnode01.cavenet.ca openshift_node_group_name='node-config-compute'
mnode02.cavenet.ca openshift_node_group_name='node-config-compute'
mnode03.cavenet.ca openshift_node_group_name='node-config-infra'

